{
  "manifest_version": 3,
  "name": "LinkedIn Profile Picture Auto Updater",
  "version": "1.0.0",
  "description": "Automatically rotate your LinkedIn profile picture on a schedule using AI-generated variations",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms"
  ],
  
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Profile Picture Auto Updater"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
